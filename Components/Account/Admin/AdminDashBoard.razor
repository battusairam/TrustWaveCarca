@page "/AdminDash"
@attribute [Authorize(Roles = "Admin")]
<AuthorizeView>
    <h3 class="text-center text-primary">Hello, @context.User.Identity?.Name!</h3>
</AuthorizeView>

<h4 class="text-center mt-4">Admin Dashboard</h4>

<div class="container-fluid mt-5">
    <div class="row">
        <!-- Total Users Card -->
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card shadow-lg border-0 rounded-3" style="background: linear-gradient(135deg, #6f42c1, #8e44ad);">
                <div class="card-body text-white">
                    <h5 class="card-title text-center">Total Users</h5>
                    <h3 class="card-text text-center">1,500</h3>
                    <div class="text-center">
                        <i class="fas fa-users fa-3x"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Active Users Card -->
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card shadow-lg border-0 rounded-3" style="background: linear-gradient(135deg, #28a745, #2ecc71);">
                <div class="card-body text-white">
                    <h5 class="card-title text-center">Active Users</h5>
                    <h3 class="card-text text-center">1,200</h3>
                    <div class="text-center">
                        <i class="fas fa-user-check fa-3x"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Messages Sent Card -->
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card shadow-lg border-0 rounded-3" style="background: linear-gradient(135deg, #17a2b8, #20c997);">
                <div class="card-body text-white">
                    <h5 class="card-title text-center">Messages Sent</h5>
                    <h3 class="card-text text-center">2,345</h3>
                    <div class="text-center">
                        <i class="fas fa-comment-dots fa-3x"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- New Users Card -->
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card shadow-lg border-0 rounded-3" style="background: linear-gradient(135deg, #ffc107, #fd7e14);">
                <div class="card-body text-white">
                    <h5 class="card-title text-center">New Users Today</h5>
                    <h3 class="card-text text-center">50</h3>
                    <div class="text-center">
                        <i class="fas fa-user-plus fa-3x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity Section -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Recent Activity</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>User123</strong> sent 15 messages in the last 30 minutes.
                        </li>
                        <li class="list-group-item">
                            <strong>User456</strong> changed their profile picture.
                        </li>
                        <li class="list-group-item">
                            <strong>User789</strong> joined the app today.
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Section (Optional) -->
    <div class="row mt-4">
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-info text-white">
                    <h5>Monthly User Growth</h5>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <p>Chart will be here</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-warning text-white">
                    <h5>Messages Sent Over Time</h5>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <p>Chart will be here</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .card:hover {
        transform: scale(1.04);
        transition: all 0.3s ease-in-out;
    }
</style>
@code {
    // Add your logic here if needed, such as fetching data or handling actions.
}


 <div class="container-fluid">
    <!-- Main content area -->
    <div class="row">
        <div class="col-md-12">
            <!-- Dashboard Content (Main Area for Chat Application) -->
            <!-- Chat Title -->
            <div class="text-center my-4">
                <h3>Admin Chat Dashboard</h3>
            </div>

            <!-- Chat Interface -->
            <div class="card">
                <div class="card-header">
                    <strong>Live Chat</strong>
                </div>
                <div class="card-body">
                    <div class="chat-container" style="max-height: 400px; overflow-y: auto;">
                        <!-- Messages (This is just static for now, but you can bind it to your chat data) -->
                        <div class="message my-2">
                            <strong class="text-primary">Admin:</strong>
                            <span class="ml-2">Hello, how can I assist you today?</span>
                        </div>
                        <div class="message my-2">
                            <strong class="text-success">User:</strong>
                            <span class="ml-2">I have a question regarding my order.</span>
                        </div>
                        <!-- Add more messages here dynamically -->
                    </div>

                    <!-- Message Input Section -->
                    <div class="input-group mt-3">
                        <input type="text" class="form-control" placeholder="Type a message..." />
                        <div class="input-group-append">
                            <button class="btn btn-primary">Send</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 


