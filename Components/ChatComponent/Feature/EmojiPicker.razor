    private async Task AddEmoji(string emoji)
    {
        // Trigger the event to notify the parent component (e.g., chat page)
        await OnEmojiSelected.InvokeAsync(emoji);

        // Optionally close the emoji picker after selection
        await JSRuntime.InvokeVoidAsync("toggleEmojiPicker");
    }
}
